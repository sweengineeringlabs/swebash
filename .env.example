# ============================================
# AI Provider Configuration
# ============================================

# Enable AI features (default: true)
SWEBASH_AI_ENABLED=true

# LLM provider: openai, anthropic, gemini (default: openai)
LLM_PROVIDER=anthropic

# Model to use (provider-specific defaults apply if not set)
# OpenAI: gpt-4o, gpt-4o-mini
# Anthropic: claude-sonnet-4-20250514, claude-opus-4-20250514
# Gemini: gemini-2.0-flash
LLM_DEFAULT_MODEL=claude-sonnet-4-20250514

# Chat history size (default: 20)
SWEBASH_AI_HISTORY_SIZE=20

# ============================================
# API Keys (set the one for your provider)
# ============================================

OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here
GEMINI_API_KEY=your-gemini-key-here

# ============================================
# Tool Calling Configuration
# ============================================

# Enable file system tools (default: true)
SWEBASH_AI_TOOLS_FS=true

# Enable command execution tools (default: true)
SWEBASH_AI_TOOLS_EXEC=true

# Enable web search tools (default: true)
SWEBASH_AI_TOOLS_WEB=true

# Require confirmation for dangerous operations (default: true)
SWEBASH_AI_TOOLS_CONFIRM=true

# Maximum tool calling loop iterations (default: 10)
SWEBASH_AI_TOOLS_MAX_ITER=10

# Maximum file read size in bytes (default: 1048576 = 1MB)
SWEBASH_AI_FS_MAX_SIZE=1048576

# Command execution timeout in seconds (default: 30)
SWEBASH_AI_EXEC_TIMEOUT=30

# ============================================
# Agent Configuration
# ============================================

# Default agent on startup (default: shell)
# Available: shell, review, devops, git
SWEBASH_AI_DEFAULT_AGENT=shell

# Auto-detect best agent from input keywords (default: true)
SWEBASH_AI_AGENT_AUTO_DETECT=true
